<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhj.springbootmybatis.domain.mybatisdemo.dao.TUserMapper">


    <update id="updateUserMoneyMinus">
        update t_user set salary=salary-#{param2} where id=#{param1}
    </update>

    <update id="updateUserMoneyAdd">
        update t_user set salary=salary+#{param2} where id=#{param1}
    </update>


</mapper>